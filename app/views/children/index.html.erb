<div class="page-header">
  <h1>
    Children
    <a href="/children/new" class="btn btn-lg btn-success">New Child</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Class</th>
        <th>Dob</th>
        <th>Last name</th>
        <th>First name</th>
        <th>Actions</th>
      </tr>

      <% @children.each do |child| %>
      <tr>
        <td><%= child.class_id %></td>
        <td><%= child.dob %></td>
        <td><%= child.last_name %></td>
        <td><%= child.first_name %></td>
        <td>
          <a href="/children/<%= child.id %>" class="btn btn-primary">Show</a>
          <a href="/children/<%= child.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_child/<%= child.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
