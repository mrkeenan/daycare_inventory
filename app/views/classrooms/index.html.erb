<div class="page-header">
  <h1>
    Classes
    <a href="/classrooms/new" class="btn btn-lg btn-success">New Class</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Room</th>
        <th>Teacher name1</th>
        <th>Teacher name2</th>
        <th>Teacher name3</th>
        <th>Actions</th>
      </tr>

      <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.room %></td>
        <td><%= classroom.teacher_name1 %></td>
        <td><%= classroom.teacher_name2 %></td>
        <td><%= classroom.teacher_name3 %></td>
        <td>
          <a href="/classrooms/<%= classroom.id %>" class="btn btn-primary">Show</a>
          <a href="/classrooms/<%= classroom.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_classroom/<%= classroom.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
