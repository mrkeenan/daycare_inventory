<!-- Validation failure messages -->
<% if @classroom.errors.any? %>
  <% @classroom.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Class</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_classroom" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for room -->
      <div class="form-group">
        <label for="room" class="control-label">
          Room
        </label>

        <input type="text" id="room" name="room" placeholder="Room" class="form-control" value="<%= @classroom.room %>">
      </div>

      <!-- Label and input for teacher_name1 -->
      <div class="form-group">
        <label for="teacher_name1" class="control-label">
          Teacher name1
        </label>

        <input type="text" id="teacher_name1" name="teacher_name1" placeholder="Teacher name1" class="form-control" value="<%= @classroom.teacher_name1 %>">
      </div>

      <!-- Label and input for teacher_name2 -->
      <div class="form-group">
        <label for="teacher_name2" class="control-label">
          Teacher name2
        </label>

        <input type="text" id="teacher_name2" name="teacher_name2" placeholder="Teacher name2" class="form-control" value="<%= @classroom.teacher_name2 %>">
      </div>

      <!-- Label and input for teacher_name3 -->
      <div class="form-group">
        <label for="teacher_name3" class="control-label">
          Teacher name3
        </label>

        <input type="text" id="teacher_name3" name="teacher_name3" placeholder="Teacher name3" class="form-control" value="<%= @classroom.teacher_name3 %>">
      </div>

      <button class="btn btn-success">
        Create Class
      </button>
      or
      <a href="/classrooms">Cancel</a>
    </form>
  </div>
</div>
