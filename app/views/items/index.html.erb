<div class="page-header">
  <h1>
    Items
    <a href="/items/new" class="btn btn-lg btn-success">New Item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Size</th>
        <th>Child</th>
        <th>Total cnt</th>
        <th>Current cnt</th>
        <th>Min cnt</th>
        <th>Take cnt</th>
        <th>Return cnt</th>
        <th>Weather type</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @items.each do |item| %>
      <tr>
        <td><%= item.size %></td>
        <td><%= item.child_id %></td>
        <td><%= item.total_cnt %></td>
        <td><%= item.current_cnt %></td>
        <td><%= item.min_cnt %></td>
        <td><%= item.take_cnt %></td>
        <td><%= item.return_cnt %></td>
        <td><%= item.weather_type %></td>
        <td><%= item.description %></td>
        <td>
          <a href="/items/<%= item.id %>" class="btn btn-primary">Show</a>
          <a href="/items/<%= item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_item/<%= item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
